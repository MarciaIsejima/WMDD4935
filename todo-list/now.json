{
    "version": 2,
    "name": "wmdd-assignment-1",
    "env": {
      "DBHOST": "@dbhost",
      "DBPORT": "@dbport",
      "DBUSER": "@dbuser",
      "DBPASSWORD": "@dbpassword",
      "DBNAME": "@dbname"
    },
    "builds": [
      { "src": "api/*/index.js", "use": "@now/node" }
    ],
    "routes": [
      { "src": "/api/*", "dest": "/index.js" }
    ]
  }
  